<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gra"
    tools:context=".IntroActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cafe24ssurroundair"
        android:text="파인드북"
        android:textColor="#71644b"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtBox"
        app:layout_constraintEnd_toEndOf="@+id/txtBox"
        app:layout_constraintStart_toStartOf="@+id/txtBox"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/cafe24ssurroundair"
        android:letterSpacing="0.85"
        android:text="독서를향한여행의시작"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/appName"
        app:layout_constraintEnd_toEndOf="@+id/txtBox"
        app:layout_constraintStart_toStartOf="@+id/txtBox"
        app:layout_constraintTop_toTopOf="@+id/txtBox"
        app:layout_constraintVertical_chainStyle="packed" />
